<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.SnapSmart" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Apply consistent checkbox style -->
        <item name="android:checkboxStyle">@style/CustomCheckbox</item>

        <!-- Proper night mode colors -->
        <item name="colorControlActivated">@color/buttonColor</item> <!-- Tint for border/checkmark -->
        <item name="colorControlHighlight">@android:color/transparent</item> <!-- Remove background fill -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item> <!-- White icons for dark status bar -->
    </style>

    <!-- Custom Checkbox Style -->
    <style name="CustomCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/buttonColor</item>
        <item name="android:buttonTintMode">src_in</item> <!-- Ensure tint applies correctly -->
    </style>
</resources>
